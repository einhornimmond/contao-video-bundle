<div class="video-modal">
    <a data-toggle="modal" href="{{ '{{env::request}}' }}#video-modal-{{ id }}" data-target="#video-modal-{{ id }}">{{ linkText|trans }}</a>

    <div class="modal fade" id="video-modal-{{ id }}" tabindex="-1" role="dialog" aria-labelledby="modalLabel_{{ id }}">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    {% block modalHeader %}
                    <h4 class="modal-title" id="modalLabel_{{ id }}">{{ headlineText }}</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="{{ 'huh.youtube.button.modal.close'|trans }}">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    {% endblock %}
                </div>
                <div class="modal-body">
                    {% block modalBody %}
                    {{ videoplayer }}
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
</div>